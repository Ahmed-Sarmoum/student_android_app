<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstname"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:textSize="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:text="Fullname: "
            android:padding="3dp"
            android:paddingRight="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:layout_weight="1"
            android:text="Ahmed SARMOUM"
            android:gravity="center|left"
            android:inputType="text"
            android:padding="3dp"
            android:paddingRight="8dp"
            android:textColorHint="#aaa"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/firstname"
            app:layout_constraintTop_toBottomOf="@+id/fabToAddProduct"
            app:layout_constraintVertical_bias="0.117" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sexe"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center|left"
            android:text="Control Note: "
            android:paddingRight="8dp"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/noteControl"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:layout_weight="1"
            android:hint="ex: 14,33"
            android:gravity="center|left"
            android:inputType="numberDecimal"
            android:padding="3dp"
            android:paddingRight="8dp"
            android:textColorHint="#aaa"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center|left"
            android:text="Control Note: "
            android:paddingRight="8dp"
            android:textSize="15dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/examNote"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:layout_weight="1"
            android:hint="ex: 14,33"
            android:gravity="center|left"
            android:inputType="numberDecimal"
            android:padding="3dp"
            android:paddingRight="8dp"
            android:textColorHint="#aaa"
            android:textSize="16dp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="center|left"
        android:text="Observation:"
        android:paddingRight="8dp"
        android:textSize="15dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/observation"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:ems="10"
        android:hint="enter observation ......."
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnsaveNote"
        android:layout_width="146dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="#078C0C"
        android:text="@string/save"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
        app:layout_constraintVertical_bias="0.822"
        tools:ignore="MissingConstraints" />


</LinearLayout>